<a class="block font-bold text-2xl md:text-3xl hover:text-gray-500" href="/" title="{{ site.name}} home">
    {% if 'logo.svg' in site.images.logo %}
        <img class="{{site.images.logo_height}}" src="{{ site.images.logo }}" alt="{{site.name}} logo">
        {% else %}
        {{ site.name }}
    {% endif %}
</a>
