<nav id="nav" class="nav w-full md:w-auto"
    x-data="{ isOpen: false }"
      @keydown.escape="isOpen = false"
      :class="{ '' : isOpen , '' : !isOpen}">
    <!--Toggle button (hidden on large screens)-->
      <button
        @click="isOpen = !isOpen"
        type="button"
        class="mx-auto flex justify-items-center items-center lg:hidden p-2 text-gray-500 focus:outline-none focus:text-white"
        :class="{ 'transition transform-180': isOpen }"
      >
        <svg
          class="h-6 w-6 fill-current"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
        >
          <path
            x-show="isOpen"
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
          />
          <path
            x-show="!isOpen"
            fill-rule="evenodd"
            d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
          />
        </svg>
        <div class="pl-1">
          Menu
        </div>
      </button>
      <!--Menu-->
      <div
        class="w-full flex-grow lg:flex lg:items-center lg:w-auto"
        :class="{ 'block shadow-3xl': isOpen, 'hidden': !isOpen }"
        @click.away="isOpen = false"
        x-show.transition="true"
      >
    <ul class="pt-6 lg:pt-0 list-reset lg:flex justify-end flex-1 items-center">

        {% for item in navigation.main %}

        <li class="level-1 mb-4 md:mr-4 md:mb-0">

            <a href="{{ item.url | safe }}" class="px-5 py-3 link font-bold hover:text-gray-500 active:text-gray-500 {% if page.url == item.url %}active text-gray-500{% endif %}
            "{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}</a>

        </li>

        {% endfor %}

        <li>
            <a class="inline-block rounded md:ml-2 py-3 px-6 font-bold bg-gray-500 hover:bg-gray-400 text-white" href="https://github.com/lkhrs/cactus-starter-11ty" target="_blank" rel="noopener">Download</a>
        </li>

    </ul>
    </div>
</nav>

